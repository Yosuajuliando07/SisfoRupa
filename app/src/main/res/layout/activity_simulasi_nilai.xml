<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/backgroundku"
    tools:context=".Simulasi_nilai">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="55dp"
        android:text="@string/simulasi_nilai"
        android:textColor="#fff"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/ETKehadiran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:hint="Kehadiran"
        android:inputType="number"/>
    <EditText
        android:id="@+id/ETTugas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:hint="Tugas"
        android:inputType="number" />
    <EditText
        android:id="@+id/ETUTS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:hint="UTS"
        android:inputType="number" />
    <EditText
        android:id="@+id/ETUAS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:hint="UAS"
        android:inputType="number" />
    <TextView
        android:id="@+id/TVGradeAkhir"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/TVNilaiAkhir"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="16sp" />

    <Button
        android:id="@+id/Hitung"
        android:layout_width="195dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:text="HITUNG"
        android:background="@drawable/background_button"
        android:onClick="HitungonClick"
        android:textColor="#fff"/>




</LinearLayout>